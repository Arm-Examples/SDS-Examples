{ 
    "version" : "2.0.0",
    "inputs" : [ { 
        "id" : "discoverCOM",
        "type" : "pickString",
        "description" : "Select COM Port for SETOOLS?",
        "options" : [ { 
            "label" : "Yes - Enable COM Port Discovery using command option",
            "value" : "-d"
        }, { 
            "label" : "No - COM port is already selected",
            "value" : ""
        } ],
        "default" : ""
    } ],
    "tasks" : [ { 
        "label" : "Alif: Install M55_HE or M55_HP debug stubs (single core configuration)",
        "type" : "shell",
        "command" : [ "cp './.alif/M55_HE_mram_cfg.json' '${config:alif.setools.root}/build/config/M55_HE_mram_cfg.json';", "cp './.alif/M55_HP_mram_cfg.json' '${config:alif.setools.root}/build/config/M55_HP_mram_cfg.json';", "cp './.alif/M55_HP_mram_stub.bin' '${config:alif.setools.root}/build/images/M55_HP_mram_stub.bin';", "cp './.alif/M55_HE_mram_stub.bin' '${config:alif.setools.root}/build/images/M55_HE_mram_stub.bin';", "cd '${config:alif.setools.root}';", "./app-gen-toc -f 'build/config/${command:cmsis-csolution.getProcessorName}_mram_cfg.json';", "./app-write-mram -p ${input:discoverCOM};" ],
        "windows" : { 
            "options" : { 
                "shell" : { 
                    "executable" : "powershell.exe",
                    "args" : [ "-Command" ]
                }
            }
        },
        "linux" : { 
            "options" : { 
                "shell" : { 
                    "executable" : "/bin/bash",
                    "args" : [ "-c" ]
                }
            }
        },
        "osx" : { 
            "options" : { 
                "shell" : { 
                    "executable" : "/bin/bash",
                    "args" : [ "-c" ]
                }
            }
        },
        "problemMatcher" : [ ]
    }, { 
        "label" : "Alif: Install M55_HE and M55_HP debug stubs (dual core configuration)",
        "type" : "shell",
        "command" : [ "cp './.alif/M55_HP_HE_mram_cfg.json' '${config:alif.setools.root}/build/config/M55_HP_HE_mram_cfg.json';", "cp './.alif/M55_HP_mram_stub.bin' '${config:alif.setools.root}/build/images/M55_HP_mram_stub.bin';", "cp './.alif/M55_HE_mram_stub.bin' '${config:alif.setools.root}/build/images/M55_HE_mram_stub.bin';", "cd '${config:alif.setools.root}';", "./app-gen-toc -f 'build/config/M55_HP_HE_mram_cfg.json';", "./app-write-mram -p ${input:discoverCOM};" ],
        "windows" : { 
            "options" : { 
                "shell" : { 
                    "executable" : "powershell.exe",
                    "args" : [ "-Command" ]
                }
            }
        },
        "linux" : { 
            "options" : { 
                "shell" : { 
                    "executable" : "/bin/bash",
                    "args" : [ "-c" ]
                }
            }
        },
        "osx" : { 
            "options" : { 
                "shell" : { 
                    "executable" : "/bin/bash",
                    "args" : [ "-c" ]
                }
            }
        },
        "problemMatcher" : [ ]
    }, { 
        "label" : "CMSIS Erase",
        "type" : "shell",
        "command" : [ "echo Connect > .cmd.jlink &&", "echo Erase >> .cmd.jlink &&", "echo Exit >> .cmd.jlink &&", "JLink.exe -device AE822FA0E5597LS0_M55_HP -if swd -speed 4000 -commandfile .cmd.jlink" ],
        "options" : { 
            "cwd" : "${workspaceFolder}/",
            "shell" : { 
                "executable" : "cmd.exe",
                "args" : [ "/d", "/c" ]
            }
        },
        "problemMatcher" : [ ]
    }, { 
        "label" : "CMSIS Load",
        "type" : "shell",
        "command" : [ "echo Connect > .cmd.jlink &&", "echo LoadFile \"out/AlgorithmTest/DevKit-E8-U55/DebugRec/AlgorithmTest.hex\" >> .cmd.jlink &&", "echo Exit >> .cmd.jlink &&", "JLink.exe -device AE822FA0E5597LS0_M55_HP -if swd -speed 4000 -commandfile .cmd.jlink" ],
        "options" : { 
            "cwd" : "${workspaceFolder}/",
            "shell" : { 
                "executable" : "cmd.exe",
                "args" : [ "/d", "/c" ]
            }
        },
        "problemMatcher" : [ ]
    }, { 
        "label" : "CMSIS Run",
        "type" : "shell",
        "command" : "JLinkGDBServerCL.exe",
        "options" : { 
            "cwd" : "${workspaceFolder}/",
            "shell" : { 
                "executable" : "cmd.exe",
                "args" : [ "/d", "/c" ]
            }
        },
        "args" : [ "-device", "AE822FA0E5597LS0_M55_HP", "-endian", "little", "-if", "swd-speed", "4000", "-nohalt", "-noir", "-nogui", "-localhostonly", "-silent", "-port", "3333", "-TelnetPort", "4444" ],
        "problemMatcher" : [ ]
    }, { 
        "label" : "CMSIS Load+Run",
        "dependsOn" : [ "CMSIS Load", "CMSIS Run" ],
        "dependsOrder" : "sequence",
        "problemMatcher" : [ ]
    } ]
}
